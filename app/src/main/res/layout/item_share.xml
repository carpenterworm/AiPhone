<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionbar_pop"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="#999999" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/activity_bg_color_a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="--" />

        <LinearLayout
            android:id="@+id/app_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#f3f3f3"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp_view"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:text="--" />

        </LinearLayout>


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:maxHeight="400dp"
            android:minHeight="80dp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/activity_bg_color_a" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="1px"
        android:background="#f8f7f7"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/devices_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textColor="#999999"
            android:textSize="12sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/reply_layout"
            android:background="@color/activity_bg_color_a" />

        <FrameLayout
            android:id="@+id/reply_layout"
            android:layout_width="46dp"
            android:layout_toLeftOf="@+id/temp_line_c"
            android:layout_height="46dp">

            <ImageView
                android:id="@+id/reply"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="14dp"
                android:src="@drawable/dashboard_reply_default" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99+"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:paddingBottom="3dp" />
        </FrameLayout>


        <View
            android:id="@+id/temp_line_c"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/recommand"
            android:background="@color/activity_bg_color_a" />

        <ImageView
            android:id="@+id/recommand"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_toLeftOf="@+id/temp_line_b"
            android:padding="14dp"
            android:src="@drawable/dashboard_recommand_off_default" />

        <View
            android:id="@+id/temp_line_b"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/like"
            android:background="@color/activity_bg_color_a" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_toLeftOf="@+id/temp_line_a"
            android:padding="14dp"
            android:src="@drawable/dashboard_like_off_default" />

        <View
            android:id="@+id/temp_line_a"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/share"
            android:background="@color/activity_bg_color_a" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@drawable/dashboard_reblog_default" />
    </RelativeLayout>

</LinearLayout>